<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellow"
    tools:context=".dashBoardActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symptomate"
            android:background="@drawable/btn_style4"
            android:shadowColor="#C12172B3"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="70"
            android:padding="11sp"
            android:textStyle="bold"
            android:fontFamily="@font/aclonica"
            android:textSize="30dp"
            android:layout_gravity="left"
            android:letterSpacing="0.02"
            android:textColor="#DAD3D3"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="0dp"
            android:layout_marginTop="100dp"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:padding="0sp"
            android:rowCount="2">

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="3dp"
                android:layout_marginRight="7dp"
                app:cardBackgroundColor="@color/transparent"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_symptomList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="18dp"
                        android:onClick="btn_symptom"
                        android:background="@drawable/btn_style"
                        android:text="Symptoms Panel"
                        android:fontFamily="@font/baloo"
                        android:textColor="@color/white"
                        android:textSize="27dp"

                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="3dp"
                android:layout_marginRight="7dp"
                app:cardBackgroundColor="@color/transparent"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_modifyList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="18dp"
                        android:background="@drawable/btn_style"
                        android:fontFamily="@font/baloo"
                        android:text="Modify List"
                        android:textColor="@color/white"
                        android:onClick="btn_modifyList"
                        android:textSize="27dp"

                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="3dp"
                android:layout_marginRight="7dp"
                app:cardBackgroundColor="@color/transparent"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_About"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="18dp"
                        android:background="@drawable/btn_style"
                        android:fontFamily="@font/baloo"
                        android:text="About Us"
                        android:textColor="@color/white"
                        android:onClick="btn_about"
                        android:textSize="27dp"

                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="3dp"
                android:layout_marginTop="00sp"
                app:cardBackgroundColor="@color/transparent"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_contact"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="18dp"
                        android:background="@drawable/btn_style"
                        android:fontFamily="@font/baloo"
                        android:text="Contact Us"
                        android:textColor="@color/white"
                        android:onClick="btn_self"

                        android:textSize="27dp"

                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </GridLayout>


    </LinearLayout>
</ScrollView>